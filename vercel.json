{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/jobs",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/status/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/generate",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
